    <br>
    <br>

    <div class="applicant_list">
      <div class="benscard">
        <h4>Actor Applicants:</h4><br>
        <table>
          <tr>
            <th>Project:</th>
            <th>Desired Role</th>
            <th>Interest</th>
            <th>Availability</th>
            <th>Audition Link</th>
          </tr>
          <% ActorApplicantForm.all.each do |form| %>
            <tr>
              <td><%= form.project_title %></td>
              <td><%= form.preferred_role %></td>
              <td><%= form.interest_reason %></td>
              <td><%= form.availability %></td>
              <% if @actor_applicant_form == 1 %>
                <td><%= cl_video_tag("actor_applicant_form.audition_submissions", :background=>"blue", :height=>300, :width=>300, :crop=>"pad") %></td>
              <% else %>
                <td>EMPTY</td>
              <% end %>
            </tr>
          <% end %>
        </table>
      </div>

    <div class="benscard1">
        <h4>Artist Applicants:</h4><br>

        <table>
          <tr>
            <th>Project:</th>
            <th>Art Form</th>
            <th>Art Style</th>
            <th>Reason</th>
            <th>Availability</th>
            <th>Art Submission</th>
          </tr>
          <% ArtistApplicantForm.all.each do |form| %>
            <tr>
              <td><%= form.project_title %></td>
              <td><%= form.art_form %></td>
              <td><%= form.art_style %></td>
              <td><%= form.interest_reason %></td>
              <td><%= form.availability %></td>
              <% if @art_submission == 1 %>
                <td><%= image_tag(form.art_submissions, :width=>150, :height=>150, :crop=> "fill") %></td>
              <% else %>
                <td>EMPTY</td>
              <% end %>
            </tr>
          <% end %>
        </table>
      </div>
      <div class="benscard1">
        <h4>Musician Applicants:</h4><br>
        <table>
          <tr>
            <th>Project:</th>
            <th>Style</th>
            <th>Instrument</th>
            <th>Interest</th>
            <th>Availability</th>
            <th>Audio-audition</th>
          </tr>
          <% MusicianApplicantForm.all.each do |form| %>
            <tr>
              <td><%= form.project_title %></td>
              <td><%= form.preferred_style %></td>
              <td><%= form.instrument %></td>
              <td><%= form.interest_reason %></td>
              <td><%= form.availability %></td>
              <% if @audition_submissions == 1 %>
                <td><%= image_tag(form.audition_submissions, :width=>150, :height=>150, :crop=> "fill") %></td>
              <% else %>
                <td>EMPTY</td>
              <% end %>
            </tr>
          <% end %>
        </table>
      </div>
    </div>
    <div class="benscard">
      <h4>Crew Applicants:</h4><br>
        <table>
          <tr>
            <th>Project:</th>
            <th>preferred_role</th>
            <th>Experience</th>
            <th>Experience</th>
            <th>Availability</th>
          </tr>
          <% CrewApplicantForm.all.each do |form| %>
            <tr>
              <td><%= form.project_title %></td>
              <td><%= form.preferred_role %></td>
              <td><%= form.experience_level %></td>
              <td><%= form.interest_reason %></td>
              <td><%= form.availability %></td>
            </tr>
          <% end %>
        </table>
    </div>
