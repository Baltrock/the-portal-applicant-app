  <div id="first" class="applicant_page">
    Here are your forms: <br>
    <%= link_to "Update Forms", primary_update_url, class: "btn btn-pink text-grey text-uppercase rounded-pill fw-bold" %>
    <%= link_to "Selection Forms", bens_selection_url, class: "btn btn-pink text-grey text-uppercase rounded-pill fw-bold" %><br>
    <%= link_to "New Project Forms", project_form_url, class: "btn btn-pink text-grey text-uppercase rounded-pill fw-bold" %>
    <%= link_to "Available Frontstage Jobs Forms", available_frontstage_url, class: "btn btn-pink text-grey text-uppercase rounded-pill fw-bold" %><br>
    <%= link_to "Available Backstage Jobs Forms", available_backstage_url, class: "btn btn-pink text-grey text-uppercase rounded-pill fw-bold" %>
