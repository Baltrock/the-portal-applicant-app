
<%= simple_form_for(@management_request_form) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :request_target %>
    <%= f.input :project_involved %>
    <%= f.input :people_involved %>
    <%= f.input :request_purpose %>
    <%= f.input :outcome_expectation %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
