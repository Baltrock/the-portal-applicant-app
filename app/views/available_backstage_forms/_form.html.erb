
<%= simple_form_for(@available_backstage_form) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :role_title %>
    <%= f.input :project_involved %>
    <%= f.input :role_description %>
    <%= f.input :requirements %>
    <%= f.input :applicants_needed %>
    <%= f.input :applications %>
    <%= f.input :filled %>
    <%= f.input :application_window_end %>
    <%= f.association :admin %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
