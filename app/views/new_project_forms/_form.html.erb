
<%= simple_form_for(@new_project_form) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :project_title %>
    <%= f.input :project_introduction %>
    <%= f.input :project_description %>
    <%= f.input :available_frontstage_roles %>
    <%= f.input :available_backstage_roles %>
    <%= f.association :admin %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
